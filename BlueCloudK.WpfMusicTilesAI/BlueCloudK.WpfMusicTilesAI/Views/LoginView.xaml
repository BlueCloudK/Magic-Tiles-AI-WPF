<UserControl x:Class="BlueCloudK.WpfMusicTilesAI.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BlueCloudK.WpfMusicTilesAI.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0f0f23" Offset="0"/>
                <GradientStop Color="#1a1a2e" Offset="0.5"/>
                <GradientStop Color="#0f3460" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="450">
            <!-- App Logo/Title -->
            <TextBlock Text="ðŸŽ® Magic Tiles AI"
                       FontSize="52"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#e94560" BlurRadius="25" ShadowDepth="0"/>
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock Text="AI-Powered Rhythm Game"
                       FontSize="20"
                       Foreground="#a8b2d1"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,50"/>

            <!-- Login Card -->
            <Border Background="#1a202c"
                    BorderBrush="#2d3748"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="40,50">
                <StackPanel>
                    <TextBlock Text="Sign in to continue"
                              FontSize="24"
                              FontWeight="SemiBold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Sign in with your Google account to use Gemini AI"
                              FontSize="14"
                              Foreground="#64748b"
                              TextWrapping="Wrap"
                              HorizontalAlignment="Center"
                              TextAlignment="Center"
                              Margin="0,0,0,35"/>

                    <!-- Google Sign-In Button -->
                    <Button Command="{Binding SignInCommand}"
                            IsEnabled="{Binding IsAuthenticating, Converter={StaticResource InverseBoolConverter}}"
                            Background="White"
                            Foreground="#1a202c"
                            BorderThickness="0"
                            Padding="20,12"
                            Cursor="Hand"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,25">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   CornerRadius="8"
                                                   Padding="{TemplateBinding Padding}">
                                                <StackPanel Orientation="Horizontal">
                                                    <!-- Google Logo SVG placeholder -->
                                                    <Ellipse Width="20" Height="20" Fill="#4285F4" Margin="0,0,12,0"/>
                                                    <TextBlock Text="Sign in with Google"
                                                             FontSize="16"
                                                             FontWeight="SemiBold"
                                                             VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#f5f5f5"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Loading Indicator -->
                    <StackPanel Visibility="{Binding IsAuthenticating, Converter={StaticResource BoolToVisibilityConverter}}"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20">
                        <ProgressBar IsIndeterminate="True"
                                    Width="250"
                                    Height="3"
                                    Background="#2d3748"
                                    Foreground="#e94560"/>
                        <TextBlock Text="Signing in..."
                                  FontSize="13"
                                  Foreground="#64748b"
                                  HorizontalAlignment="Center"
                                  Margin="0,10,0,0"/>
                    </StackPanel>

                    <!-- Error Message -->
                    <Border Background="#ef4444"
                           BorderBrush="#dc2626"
                           BorderThickness="1"
                           CornerRadius="6"
                           Padding="15,10"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}"
                                  FontSize="13"
                                  Foreground="White"
                                  TextWrapping="Wrap"/>
                    </Border>

                    <!-- Info Text -->
                    <TextBlock Margin="0,25,0,0"
                              FontSize="12"
                              Foreground="#64748b"
                              TextWrapping="Wrap"
                              TextAlignment="Center">
                        <Run Text="By signing in, you agree to use your Google account"/>
                        <LineBreak/>
                        <Run Text="to access Gemini AI features."/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Help Text -->
            <TextBlock Margin="0,30,0,0"
                      FontSize="13"
                      Foreground="#64748b"
                      TextWrapping="Wrap"
                      TextAlignment="Center">
                <Run Text="Need help? Make sure you have created OAuth 2.0 credentials"/>
                <LineBreak/>
                <Run Text="in Google Cloud Console for this application."/>
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
