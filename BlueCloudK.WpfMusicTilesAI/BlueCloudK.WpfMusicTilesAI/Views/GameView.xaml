<UserControl x:Class="BlueCloudK.WpfMusicTilesAI.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BlueCloudK.WpfMusicTilesAI.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Focusable="True"
             KeyDown="UserControl_KeyDown">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0f0f23" Offset="0"/>
                <GradientStop Color="#1a1a2e" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Game Area -->
        <Canvas x:Name="GameCanvas" Width="400" Height="600"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- 4 Lanes -->
            <Rectangle Canvas.Left="0" Canvas.Top="0" Width="100" Height="600" Stroke="#2d3748" StrokeThickness="2" Fill="#1a202c" Opacity="0.3"/>
            <Rectangle Canvas.Left="100" Canvas.Top="0" Width="100" Height="600" Stroke="#2d3748" StrokeThickness="2" Fill="#1a202c" Opacity="0.3"/>
            <Rectangle Canvas.Left="200" Canvas.Top="0" Width="100" Height="600" Stroke="#2d3748" StrokeThickness="2" Fill="#1a202c" Opacity="0.3"/>
            <Rectangle Canvas.Left="300" Canvas.Top="0" Width="100" Height="600" Stroke="#2d3748" StrokeThickness="2" Fill="#1a202c" Opacity="0.3"/>

            <!-- Hit Zone Line -->
            <Rectangle Canvas.Left="0" Canvas.Top="500" Width="400" Height="5" Fill="#e94560" Opacity="0.8"/>

            <!-- Notes -->
            <ItemsControl ItemsSource="{Binding ActiveNotes}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Left" Value="{Binding Lane, Converter={StaticResource LaneToXConverter}}"/>
                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Rectangle Width="90" Height="30" Fill="#00d9ff" Stroke="#0099cc" StrokeThickness="2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Hit Feedback Animations -->
            <ItemsControl ItemsSource="{Binding HitFeedbacks}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style>
                        <Setter Property="Canvas.Left" Value="{Binding Lane, Converter={StaticResource LaneToXConverter}}"/>
                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Text}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{Binding Color}"
                                   Opacity="{Binding Opacity}"
                                   TextAlignment="Center"
                                   Width="90">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>

        <!-- HUD -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20">
            <TextBlock Text="{Binding Song.Title}" FontSize="20" FontWeight="Bold" Foreground="White"/>
            <TextBlock FontSize="16" Foreground="White" Margin="0,10,0,0">
                <Run Text="Score: "/>
                <Run Text="{Binding Score}" FontWeight="Bold"/>
            </TextBlock>
            <TextBlock FontSize="16" Foreground="White" Margin="0,5,0,0">
                <Run Text="Combo: "/>
                <Run Text="{Binding Combo}" FontWeight="Bold" Foreground="#00d9ff"/>
            </TextBlock>
            <TextBlock FontSize="14" Foreground="#64748b" Margin="0,5,0,0">
                <Run Text="Max Combo: "/>
                <Run Text="{Binding MaxCombo}"/>
            </TextBlock>
        </StackPanel>

        <!-- Controls hint -->
        <TextBlock Text="Press D, F, J, K to play"
                   FontSize="14"
                   Foreground="#64748b"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,20"/>

        <!-- Menu Button (â‰¡) -->
        <Button Command="{Binding ShowPauseMenuCommand}"
                Content="â‰¡"
                FontSize="28"
                FontWeight="Bold"
                Width="50"
                Height="50"
                Background="#2d3748"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,20,20,0">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        Width="{TemplateBinding Width}"
                                        Height="{TemplateBinding Height}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#4a5568"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Pause Menu Overlay -->
        <Border Background="#CC000000"
                Visibility="{Binding IsPauseMenuVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="#1a1a2e"
                    CornerRadius="20"
                    Padding="40"
                    MaxWidth="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="â¸ Táº¡m dá»«ng"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#00d9ff"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,40"/>

                    <!-- Menu Buttons -->
                    <StackPanel>
                        <!-- Continue Button -->
                        <Button Command="{Binding HidePauseMenuCommand}"
                                Content="â–¶ Tiáº¿p tá»¥c"
                                FontSize="18"
                                Padding="30,15"
                                Background="#00d9ff"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,0,15">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#00b8d4"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Settings Button -->
                        <Button Click="PauseMenuSettingsButton_Click"
                                Content="âš™ CÃ i Ä‘áº·t"
                                FontSize="18"
                                Padding="30,15"
                                Background="#2d3748"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,0,15">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4a5568"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Exit to Menu Button -->
                        <Button Command="{Binding BackToMenuCommand}"
                                Content="ðŸ  Vá» Menu"
                                FontSize="18"
                                Padding="30,15"
                                Background="#e94560"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#f76f8e"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- End Game Screen Overlay -->
        <Border Background="#CC000000"
                Visibility="{Binding IsGameEnded, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border Background="#1a1a2e"
                    CornerRadius="20"
                    Padding="40"
                    MaxWidth="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="ðŸŽµ HoÃ n thÃ nh!"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="#00d9ff"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <!-- Song Title -->
                    <TextBlock Text="{Binding Song.Title}"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>

                    <!-- Score -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,20">
                        <TextBlock Text="â­ Äiá»ƒm: "
                                   FontSize="28"
                                   Foreground="#fbbf24"/>
                        <TextBlock Text="{Binding Score}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#fbbf24"/>
                    </StackPanel>

                    <!-- Statistics Grid -->
                    <Grid Margin="0,20,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Max Combo -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="ðŸ”¥ Max Combo"
                                   FontSize="16"
                                   Foreground="#94a3b8"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,10,10"/>
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   Text="{Binding MaxCombo}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Left"
                                   Margin="10,0,0,10"/>

                        <!-- Accuracy -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="ðŸŽ¯ Äá»™ chÃ­nh xÃ¡c"
                                   FontSize="16"
                                   Foreground="#94a3b8"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,10,10"/>
                        <StackPanel Grid.Row="1" Grid.Column="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    Margin="10,0,0,10">
                            <TextBlock Text="{Binding Accuracy, StringFormat={}{0:F1}}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="%"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="2,0,0,0"/>
                        </StackPanel>

                        <!-- Notes Hit -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="âœ“ Notes Hit"
                                   FontSize="16"
                                   Foreground="#94a3b8"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,10,0"/>
                        <StackPanel Grid.Row="2" Grid.Column="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Left"
                                    Margin="10,0,0,0">
                            <TextBlock Text="{Binding NotesHit}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#10b981"/>
                            <TextBlock Text=" / "
                                       FontSize="16"
                                       Foreground="#94a3b8"/>
                            <TextBlock Text="{Binding TotalNotes}"
                                       FontSize="16"
                                       Foreground="White"/>
                        </StackPanel>
                    </Grid>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,20,0,0">
                        <!-- Back to Menu Button -->
                        <Button Command="{Binding BackToMenuCommand}"
                                Content="â—€ Vá» Menu"
                                FontSize="16"
                                Padding="25,12"
                                Background="#2d3748"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,0,10,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4a5568"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</UserControl>
