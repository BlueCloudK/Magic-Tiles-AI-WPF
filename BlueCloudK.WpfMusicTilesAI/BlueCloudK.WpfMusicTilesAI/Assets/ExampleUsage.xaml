<!--
    EXAMPLE: How to use Assets in XAML
    This is a reference file showing various ways to use image assets.
    DO NOT include this in your project - it's just for reference.
-->

<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Asset Usage Examples"
        Width="600" Height="400"
        Icon="/Assets/Icons/app-icon.ico">

    <StackPanel Margin="20">

        <!-- Example 1: Logo in header -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <Image Source="/Assets/Logos/app-logo.png"
                   Width="48" Height="48"
                   Margin="0,0,10,0"/>
            <TextBlock Text="Magic Tiles AI"
                       FontSize="32"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Example 2: Album art with fallback -->
        <Border Width="200" Height="200"
                CornerRadius="10"
                Margin="0,0,0,20">
            <Border.Background>
                <ImageBrush ImageSource="/Assets/Images/album-placeholder.png"
                           Stretch="UniformToFill"/>
            </Border.Background>
        </Border>

        <!-- Example 3: Icon button -->
        <Button Width="150" Height="40">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Assets/Icons/play-icon.png"
                       Width="20" Height="20"
                       Margin="0,0,10,0"/>
                <TextBlock Text="Play" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>

        <!-- Example 4: Background image -->
        <Grid Width="400" Height="200" Margin="0,20,0,0">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/Images/background.png"
                           Stretch="UniformToFill"
                           Opacity="0.3"/>
            </Grid.Background>
            <TextBlock Text="Content over background"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="24"
                       FontWeight="Bold"/>
        </Grid>

        <!-- Example 5: Using data binding -->
        <Image Source="{Binding AlbumArtPath,
                                FallbackValue=/Assets/Images/album-placeholder.png}"
               Width="100" Height="100"/>

        <!-- Example 6: Absolute file path from LocalSong -->
        <Image Source="{Binding Song.AlbumArtPath}"
               Width="100" Height="100">
            <!-- If AlbumArtPath is null, show placeholder -->
            <Image.Style>
                <Style TargetType="Image">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Song.AlbumArtPath}" Value="{x:Null}">
                            <Setter Property="Source" Value="/Assets/Images/album-placeholder.png"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>

    </StackPanel>
</Window>
